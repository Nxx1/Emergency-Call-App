<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_register"
    tools:context=".Auth.RegisterActivity">

    <Button
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:id="@+id/btn_back"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/ic_baseline_arrow_back_ios_new_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_marginRight="16dp"
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="18dp"
        android:fontFamily="sans-serif-medium"
        android:text="Daftar"
        android:textColor="@android:color/white"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_back" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="Silahkan isi informasi dibawah ini untuk membuat akun baru"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <LinearLayout
        android:padding="32dp"
        android:layout_marginTop="16dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bgformregister"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_marginRight="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="4dp"
                    android:fontFamily="sans-serif"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="Nama depan"/>


                <EditText
                    android:fontFamily="sans-serif"
                    android:textSize="14sp"
                    android:id="@+id/edt_firstname"
                    android:hint="nama depan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="4dp"
                    android:fontFamily="sans-serif"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="Nama belakang"/>

                <EditText
                    android:fontFamily="sans-serif"
                    android:textSize="14sp"
                    android:id="@+id/edt_lastname"
                    android:hint="nama belakang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"/>
            </LinearLayout>


        </LinearLayout>


        <TextView
            android:textColor="@android:color/black"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="4dp"
            android:fontFamily="sans-serif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="Email"/>

        <EditText
            android:fontFamily="sans-serif"
            android:textSize="14sp"
            android:id="@+id/edt_email"
            android:hint="cth : emailkamu@gmail.com"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"/>

        <TextView
            android:textColor="@android:color/black"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="4dp"
            android:fontFamily="sans-serif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="Nomor handphone"/>

        <EditText
            android:fontFamily="sans-serif"
            android:textSize="14sp"
            android:id="@+id/edt_nomorhp"
            android:hint="cth : 081234567890"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"/>

        <TextView
            android:textColor="@android:color/black"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="4dp"
            android:fontFamily="sans-serif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="Password"/>

        <EditText
            android:fontFamily="sans-serif"
            android:textSize="14sp"
            android:hint="masukkan password"
            android:id="@+id/edt_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword" />

        <TextView
            android:textColor="@android:color/black"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="4dp"
            android:fontFamily="sans-serif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="Konfirmasi password"/>

        <EditText
            android:fontFamily="sans-serif"
            android:textSize="14sp"
            android:hint="masukkan password"
            android:id="@+id/edt_konfirmasi_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword" />

        <Button
            android:textColor="@android:color/white"
            android:fontFamily="sans-serif"
            android:layout_marginTop="8dp"
            android:background="@drawable/bgbtnregister"
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Daftar"/>

        <TextView
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="Setelah membuat akun, maka Anda menyetujui"/>


        <TextView
            android:gravity="center"
            android:textColor="#330055"
            android:fontFamily="sans-serif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="Syarat Ketentuan dan Kebijakan Privasi"/>

    </LinearLayout>






</androidx.constraintlayout.widget.ConstraintLayout>